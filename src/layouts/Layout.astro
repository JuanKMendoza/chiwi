---
import Navbar from "../components/Navbar.astro";
import Topbar from "../components/Topbar.astro";
import WhatsAppButton from "../components/WhatsAppButton.astro";
import Footer from "../components/Footer.astro";

import "../styles/global.css";

// Props del componente
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { 
  title,
  description = "Velas kawaii artesanales personalizadas. Hechas a mano con amor en Colombia. ¡Dale vida a tus espacios!",
  image = "/og-image.png"
} = Astro.props;

// URLs canónicas y absolutas
const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://chiwicolombia.com');
const ogImageURL = new URL(image, Astro.site || 'https://chiwicolombia.com');
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Básico -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook / WhatsApp -->
    <meta property="og:type" content="website" />
    <meta property="fb:app_id" content="123456789" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Chiwi - Velas Kawaii Artesanales Colombia" />
    <meta property="og:locale" content="es_CO" />
    <meta property="og:site_name" content="Chiwi Colombia" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TZ1ZSKVDEL"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-TZ1ZSKVDEL');
    </script>

    <!-- Rastrear clics en WhatsApp -->
    <script is:inline>
      if (typeof window !== 'undefined') {
        window.addEventListener('load', function() {
          document.addEventListener('click', function(e) {
            var link = e.target.closest('a[href*="wa.me"]');
            if (link && typeof gtag === 'function') {
              var productName = link.getAttribute('aria-label') || 'Producto desconocido';
              gtag('event', 'whatsapp_click', {
                event_category: 'engagement',
                event_label: productName,
                product_name: productName
              });
            }
          });
        });
      }
    </script>

    <!-- Schema de Organización con Logo -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Chiwi Colombia",
      "alternateName": "Chiwi",
      "url": "https://chiwicolombia.com",
      "logo": "https://chiwicolombia.com/favicon.svg",
      "image": "https://chiwicolombia.com/favicon.svg",
      "description": "Velas artesanales personalizadas kawaii. Memoriales para mascotas, regalos únicos y velas que brillan en la oscuridad. Hechas a mano con amor en Colombia.",
      "address": {
        "@type": "PostalAddress",
        "addressCountry": "CO",
        "addressLocality": "Colombia"
      },
      "contactPoint": {
        "@type": "ContactPoint",
        "telephone": "+57-310-227-8592",
        "contactType": "Customer Service",
        "availableLanguage": ["Spanish", "es"]
      }
    })} />
  </head>
  
  <body class="font-Quicksand">
    <Topbar />
    <Navbar />
    <WhatsAppButton/>
    <slot />
    <Footer/>
  </body>

  <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
</html>