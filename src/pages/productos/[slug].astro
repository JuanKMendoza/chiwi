---
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import { products, getRelatedProducts } from "../../data/products";

// Generar rutas est√°ticas para cada producto
export async function getStaticPaths() {
  return products.map(product => ({
    params: { slug: product.slug },
    props: { product }
  }));
}

const { product } = Astro.props;
const relatedProducts = getRelatedProducts(product);
---

<Layout
  title={`${product.name} - $${product.price.toLocaleString('es-CO')} | Chiwi Colombia`}
  description={product.longDescription || product.description}
>
  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-4" aria-label="Breadcrumb">
    <div class="max-w-7xl mx-auto px-4">
      <ol class="flex items-center gap-2 text-sm text-gray-600">
        <li>
          <a href="/" class="hover:text-orange-500 transition-colors">Inicio</a>
        </li>
        <li>
          <ion-icon name="chevron-forward-outline" class="text-xs"></ion-icon>
        </li>
        <li>
          <a href="/productos" class="hover:text-orange-500 transition-colors">Productos</a>
        </li>
        <li>
          <ion-icon name="chevron-forward-outline" class="text-xs"></ion-icon>
        </li>
        <li class="text-orange-500 font-semibold truncate">{product.name}</li>
      </ol>
    </div>
  </nav>

  <!-- Producto Principal -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-12">
        <!-- Galer√≠a de Im√°genes -->
        <div class="space-y-4">
          <!-- Imagen Principal -->
          <div class="relative aspect-square rounded-2xl overflow-hidden bg-gray-100 shadow-xl">
            <Image
              src={product.image}
              alt={product.alt}
              class="w-full h-full object-cover"
              width={800}
              height={800}
              format="webp"
              quality={90}
            />
            
            {product.badge && (
              <div class="absolute top-4 left-4 bg-gradient-to-r from-orange-500 to-red-500 text-white text-sm font-bold px-4 py-2 rounded-full shadow-lg">
                {product.badge}
              </div>
            )}
            
            {product.featured && (
              <div class="absolute top-4 right-4 bg-yellow-400 text-gray-900 text-sm font-bold px-4 py-2 rounded-full shadow-lg flex items-center gap-2">
                <ion-icon name="star" class="text-lg"></ion-icon>
                Popular
              </div>
            )}
          </div>
        </div>

        <!-- Informaci√≥n del Producto -->
        <div class="space-y-6">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
              {product.name}
            </h1>
            
            <div class="flex items-baseline gap-4">
              <p class="text-4xl font-bold text-orange-500">
                ${product.price.toLocaleString('es-CO')}
              </p>
              <span class="text-gray-500 text-lg">COP</span>
            </div>
          </div>

          <div class="border-t border-b border-gray-200 py-6">
            <p class="text-gray-700 text-lg leading-relaxed">
              {product.longDescription || product.description}
            </p>
          </div>

          {product.features && (
            <div class="space-y-3">
              <h3 class="text-xl font-bold text-gray-900">Caracter√≠sticas:</h3>
              <ul class="space-y-2">
                {product.features.map(feature => (
                  <li class="flex items-start gap-3">
                    <ion-icon name="checkmark-circle" class="text-2xl text-green-500 flex-shrink-0 mt-0.5"></ion-icon>
                    <span class="text-gray-700">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <div class="grid grid-cols-2 gap-4 bg-orange-50 p-6 rounded-xl">
            {product.size && (
              <div>
                <p class="text-sm text-gray-600 mb-1">Tama√±o</p>
                <p class="font-semibold text-gray-900">{product.size}</p>
              </div>
            )}
            {product.weight && (
              <div>
                <p class="text-sm text-gray-600 mb-1">Peso</p>
                <p class="font-semibold text-gray-900">{product.weight}</p>
              </div>
            )}
            {product.elaborationTime && (
              <div class="col-span-2">
                <p class="text-sm text-gray-600 mb-1">Tiempo de elaboraci√≥n</p>
                <p class="font-semibold text-gray-900">{product.elaborationTime}</p>
              </div>
            )}
          </div>

          <div class="space-y-4 pt-4">
            <a
              href={`https://wa.me/573102278592?text=Hola!%20Me%20interesa%20*${product.name}*%20($${product.price.toLocaleString('es-CO')})%20¬øEst√°%20disponible?`}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-center justify-center gap-3 w-full bg-[#25D366] text-white font-bold text-lg px-8 py-5 rounded-full hover:bg-[#20BA5A] hover:scale-105 transition-all duration-300 shadow-xl"
            >
              <ion-icon name="logo-whatsapp" class="text-3xl group-hover:animate-bounce"></ion-icon>
              Pedir por WhatsApp
              <ion-icon name="arrow-forward-outline" class="text-2xl group-hover:translate-x-1 transition-transform"></ion-icon>
            </a>

            <div class="bg-gradient-to-r from-purple-50 to-pink-50 p-4 rounded-xl">
              <div class="flex items-start gap-3">
                <ion-icon name="information-circle-outline" class="text-2xl text-purple-500 flex-shrink-0 mt-0.5"></ion-icon>
                <div class="text-sm text-gray-700">
                  <p class="font-semibold mb-1">Informaci√≥n importante:</p>
                  <p>‚è±Ô∏è Tiempo de elaboraci√≥n: {product.elaborationTime || "2-3 d√≠as h√°biles"}</p>
                  <p>üöö Env√≠os a toda Colombia</p>
                  <p>üí≥ Pago contra entrega disponible</p>
                </div>
              </div>
            </div>
          </div>

          <div class="border-t pt-6 space-y-3">
            <div class="flex items-center gap-3">
              <ion-icon name="shield-checkmark-outline" class="text-2xl text-green-500"></ion-icon>
              <span class="text-gray-700">100% Hecho a mano</span>
            </div>
            <div class="flex items-center gap-3">
              <ion-icon name="leaf-outline" class="text-2xl text-green-500"></ion-icon>
              <span class="text-gray-700">Cera de soja natural</span>
            </div>
            <div class="flex items-center gap-3">
              <ion-icon name="color-palette-outline" class="text-2xl text-orange-500"></ion-icon>
              <span class="text-gray-700">Personalizaci√≥n disponible</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  {relatedProducts.length > 0 && (
    <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
      <div class="max-w-7xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Tambi√©n te puede gustar
          </h2>
          <p class="text-gray-600">Descubre otros productos que complementan tu compra</p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
          {relatedProducts.map(related => (
            <article class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2">
              <a href={`/productos/${related.slug}`} class="block">
                <div class="relative aspect-square overflow-hidden">
                  <Image
                    src={related.image}
                    alt={related.alt}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                    width={600}
                    height={600}
                    loading="lazy"
                    format="webp"
                    quality={80}
                  />
                  
                  {related.featured && (
                    <div class="absolute top-4 right-4 bg-yellow-400 text-gray-900 text-xs font-bold px-3 py-1 rounded-full">
                      <ion-icon name="star" class="text-sm"></ion-icon>
                    </div>
                  )}
                </div>

                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-orange-500 transition-colors">
                    {related.name}
                  </h3>
                  <p class="text-2xl font-bold text-orange-500 mb-4">
                    ${related.price.toLocaleString('es-CO')}
                  </p>
                  <span class="inline-flex items-center gap-2 text-orange-500 font-semibold group-hover:gap-3 transition-all">
                    Ver detalles
                    <ion-icon name="arrow-forward-outline" class="text-lg"></ion-icon>
                  </span>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <section class="py-16 bg-gradient-to-r from-orange-500 to-pink-500">
    <div class="max-w-4xl mx-auto px-4 text-center text-white">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        ¬øTienes una idea diferente?
      </h2>
      <p class="text-xl mb-8 text-white/90">
        Creamos velas 100% personalizadas. Cu√©ntanos tu idea y la hacemos realidad.
      </p>
      <a
        href="https://wa.me/573102278592?text=Hola!%20Quiero%20una%20vela%20personalizada"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-3 bg-white text-orange-500 font-bold px-8 py-4 rounded-full hover:scale-105 transition-all shadow-xl"
      >
        <ion-icon name="sparkles-outline" class="text-2xl"></ion-icon>
        Personalizar mi vela
      </a>
    </div>
  </section>
</Layout>