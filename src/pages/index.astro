  <script>
    // Contador regresivo con lazy loading
    const seasonalSection = document.querySelector(".seasonal-section");

    if (seasonalSection) {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              initCountdown();
              observer.disconnect();
            }
          });
        },
        {
          rootMargin: "50px",
        }
      );

      observer.observe(seasonalSection);
    }

    function initCountdown() {
      updateCountdown();
      setInterval(updateCountdown, 60000); // Actualizar cada minuto
    }

    function updateCountdown() {
      const now = new Date();
      const endOfOctober = new Date(now.getFullYear(), 10, 1, 0, 0, 0); // Nov 1, 00:00:00

      if (now.getMonth() !== 9) {
        // Si no es octubre
        document
          .querySelectorAll(
            ".countdown-days, .countdown-hours, .countdown-minutes"
          )
          .forEach((el) => {
            if (el) el.textContent = "00";
          });
        return;
      }

      const diff = endOfOctober.getTime() - now.getTime();

      const days = Math.floor(diff / (1000 * 60 * 60 * 24));
      const hours = Math.floor(
        (diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
      );
      const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));

      const daysEl = document.querySelector(".countdown-days");
      const hoursEl = document.querySelector(".countdown-hours");
      const minutesEl = document.querySelector(".countdown-minutes");

      if (daysEl) daysEl.textContent = days.toString().padStart(2, "0");
      if (hoursEl) hoursEl.textContent = hours.toString().padStart(2, "0");
      if (minutesEl)
        minutesEl.textContent = minutes.toString().padStart(2, "0");
    }
