---
const redes = [
  {
    name: "Tiktok",
    href: "https://www.tiktok.com/@chiwi_co",
    icon: "tiktok",
  },
  {
    name: "Facebook",
    href: "https://www.facebook.com/chiwicolombia",
    icon: "facebook",
  },
  {
    name: "Instagram",
    href: "https://www.instagram.com/chiwi_co/",
    icon: "instagram",
  },
  {
    name: "Whatsapp",
    href: "https://wa.me/573102278592", // 
    icon: "whatsapp",
  },
];
---

<div class="flex bg-Naranja-principal justify-between items-center px-6 lg:px-20 py-3 text-white text-sm">
  <!-- Info envío -->
  <div class="flex items-center gap-4 px-4">
    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none"
      stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="icon max-sm:w-15">
      <path stroke="none" d="M0 0h24v24H0z" fill="none" />
      <path d="M7 17a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
      <path d="M17 17a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
      <path d="M5 17h-2v-11a1 1 0 0 1 1 -1h9v12h6m4 0h2v-6h-8m0 -5h5l3 5" />
    </svg>
    <span class="font-light">El costo del envío se paga en el momento de la entrega</span>
  </div>

  <!-- Redes sociales -->
  <div class="flex items-center gap-3">
    {redes.map((red) => (
      <a
        href={red.href}
        target="_blank"
        rel="noopener noreferrer"
        aria-label={red.name}
        class="transition-transform hover:scale-110"
      >
        {red.icon === "tiktok" && (
          <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24"
            fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
            stroke-linejoin="round" class="icon icon-tabler icon-tabler-brand-tiktok">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M21 7.917v4.034a9.948 9.948 0 0 1 -5 -1.951v4.5a6.5 6.5 0 1 1 -8 -6.326v4.326a2.5 2.5 0 1 0 4 2v-11.5h4.083a6.005 6.005 0 0 0 4.917 4.917z" />
          </svg>
        )}
        {red.icon === "facebook" && (
          <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24"
            fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
            stroke-linejoin="round" class="icon icon-tabler icon-tabler-brand-facebook">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3" />
          </svg>
        )}
        {red.icon === "instagram" && (
          <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24"
            fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
            stroke-linejoin="round" class="icon icon-tabler icon-tabler-brand-instagram">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M4 8a4 4 0 0 1 4 -4h8a4 4 0 0 1 4 4v8a4 4 0 0 1 -4 4h-8a4 4 0 0 1 -4 -4z" />
            <path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" />
            <path d="M16.5 7.5v.01" />
          </svg>
        )}
        {red.icon === "whatsapp" && (
          <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24"
            fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
            stroke-linejoin="round" class="icon icon-tabler icon-tabler-brand-whatsapp">
            <path stroke="none" d="M0 0h24v24H0z" fill="none" />
            <path d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9" />
            <path d="M9 10a.5.5 0 0 0 1 0v-1a.5.5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5.5 0 0 0 0 -1h-1a.5.5 0 0 0 0 1" />
          </svg>
        )}
      </a>
    ))}
  </div>
</div>
